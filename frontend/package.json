    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.294.0",
    "minisearch": "^7.1.2",
    "next": "14.0.4",
    "react": "18.2.0",
    "react-apexcharts": "^1.7.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.61.1",
    "react-pdf": "^10.0.1",
    "react-webcam": "^7.2.0",
    "recharts": "^2.10.3",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7",
    "tesseract.js": "^6.0.1",
    "zod": "^4.0.14",
