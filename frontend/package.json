    "@tiptap/extension-text": "^3.0.7",
    "@tiptap/react": "^3.0.7",
    "@tiptap/starter-kit": "^3.0.7",
    "apexcharts": "^5.3.2",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.56.9",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^12.23.12",
